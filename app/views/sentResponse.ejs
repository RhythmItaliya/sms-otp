<% include partials/header %>

<div class="container mx-auto text-center px-4 sm:px-6 lg:px-8">
    <br>
    <div class="w-full max-w-2xl mx-auto pt-10 sm:pt-20">
        <% let response = ''; let name = data.name; let mobile = data.mobile; %>

        <div class="bg-white shadow-md rounded-lg p-4 sm:p-6 border border-gray-200">
            <% if (data.err) { 
                response = data.err; %>
                <table class="w-full">
                    <tbody>
                        <tr>
                            <td class="py-4 text-red-600 text-lg font-bold text-center" colspan="2">
                                <b><%= response %></b>
                            </td>
                        </tr>
                    </tbody>
                </table>
            <% } else { 
                response = data.success.msg; %>
                <table class="w-full">
                    <tbody>
                        <tr>
                            <td class="py-4 text-green-600 text-lg font-bold text-center" colspan="2">
                                <b><%= response %></b>
                            </td>
                        </tr>
                    </tbody>
                </table>
            <% } %>

            <br>
            <div class="flex flex-col sm:flex-row justify-center sm:space-x-4 space-y-2 sm:space-y-0">
                <a href="/sent" class="rounded-md bg-blue-600 px-4 py-2 text-sm font-semibold text-white shadow-md hover:bg-blue-500 transition duration-200">Go to Sent Messages</a>

                <% if (data.err) { %>
                    <a class="rounded-md bg-yellow-600 px-4 py-2 text-sm font-semibold text-white shadow-md hover:bg-yellow-500 transition duration-200" onclick="window.history.back()">Try Again?</a>
                <% } else { %>
                    <a href="/contacts/details/<%= mobile %>" class="rounded-md bg-green-600 px-4 py-2 text-sm font-semibold text-white shadow-md hover:bg-green-500 transition duration-200">View <%= name %></a>
                <% } %>

                <a href="/" class="rounded-md bg-red-600 px-4 py-2 text-sm font-semibold text-white shadow-md hover:bg-red-500 transition duration-200">Home</a>
            </div>
        </div>
    </div>
</div>

<% include partials/footer %>
