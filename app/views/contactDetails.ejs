<% include partials/header %>

<div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-center pt-10 sm:pt-20">
        <div class="w-full max-w-lg bg-white shadow-md rounded-lg p-6 text-center">

            <h2 class="text-2xl sm:text-3xl font-bold text-center text-gray-800 bg-gray-100 p-4 rounded-lg shadow-lg mb-6">
                Contact Information
            </h2>

            <% if (locals.err) { %>
                <p class="text-red-600 mb-4"> <%= err %> </p>
                <a href="/" class="bg-red-600 text-white py-2 px-4 rounded-lg text-lg hover:bg-red-700 transition duration-200">Back to Home!</a>
            <% } else { %>
                <img src="<%= data.image %>" alt="" class="rounded-full h-36 w-36 mx-auto">
                <hr class="my-4">
                <p>
                    <b class="text-2xl sm:text-3xl"><%= data.firstName + ' ' + data.lastName %></b>
                </p>
                <div class="flex items-center justify-center font-bold my-2">
                    <p class="text-lg sm:text-xl mr-2"><i class="glyphicon glyphicon-phone"></i></p>
                    <p class="text-lg sm:text-xl"><%= data.mobile %></p>
                </div>
                <div class="flex items-center justify-center font-bold my-2">
                    <p class="text-lg sm:text-xl mr-2"><i class="glyphicon glyphicon-map-marker"></i></p>
                    <p class="text-lg sm:text-xl text-left"><%= data.address %></p>
                </div>
                <hr class="my-4">
                <div class="flex flex-col sm:flex-row justify-between space-y-4 sm:space-y-0 sm:space-x-4">
                    <a href="<%= '/compose/' + parseInt(data.mobile) %>" class="rounded-md bg-blue-600 px-4 py-2 text-sm font-semibold text-white shadow-md hover:bg-blue-700 transition duration-200">Send Message &nbsp; 
                        <span class="glyphicon glyphicon-edit"></span>
                    </a> 
                    <a href="/" class="rounded-md bg-red-600 px-4 py-2 text-sm font-semibold text-white shadow-md hover:bg-red-500 transition duration-200">Home</a>  
                </div>
            <% } %>
        </div>
    </div>
</div>

<% include partials/footer %>
